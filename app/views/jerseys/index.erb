<% @jerseys.each_slice(3) do |jersey_slice| %>
<div class="columns">
<% jersey_slice.each do |jersey|%>
<div class="column">
<div class="card">
<div class="card-image">
    <figure class="image is-4by3">
    <% if jersey.picture_url == "" || jersey.picture_url == nil%>
    <img src="images/jersey.png" alt="Placeholder image">
    <% else %>
     <img src="<%=jersey.picture_url%>" alt="Uploaded image">
    <% end %>
    </figure>
  </div>
  <header class="card-header">
    <p class="card-header-title is-centered">
        <%= jersey.title %>
    </p>
  </header>
  <div class="card-content">
    <div class="content has-text-centered">
     <% if  jersey.player != nil %>
          Player Name: <%= jersey.player %> <br>
          <% end %>
          <% if  jersey.player_number != nil %>
          Player Number: <%= jersey.player_number %> <br>
          <% end %>
           <% if  jersey.team != nil %>
          Team: <%= jersey.team %></br>
            <% end %>
           <% if  jersey.sport != nil %>
          Sport: <%= jersey.sport %> <br>
            <% end %>
    </div>
  </div>
  <footer class="card-footer">
  <a href="/jerseys/<%=jersey.id%>" class="card-footer-item">View</a>
  <a href="/jerseys/<%=jersey.id%>/edit" class="card-footer-item">Edit</a>
  </footer>
</div>
</div>
<% end %>
</div>
<% end %>
